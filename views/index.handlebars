<img class="displayed" src="/assets/burger.png" alt="burger"/>
  <h1>Eat-Da-Burger!</h1>

<div class="container" id="burgerlists">
  <div class="row">
    
    <div class="col-6 col-sm-6">
    <h3>Your Burgers</h3>
      <ol>
      {{#each burgers}}
      {{#unless devoured}}
       <li>      
       {{burger_name}}
       <button data-id="{{id}}" class="devoured">Devour it!</button>
       </li>
      {{/unless}}
      {{/each}}
      </ol>
    </div>

    <div class="col-6 col-sm-6">
      <h3>Devoured Burgers</h3>
      <ol>
      {{#each burgers}}
      {{#if devoured}}
        <li>
        {{burger_name}}
        </li>
      {{/if}}
      {{/each}}
      </ol>
    </div>
  </div> 
        

  <div class="row">
      <div class="col-md-12 text-center enter_section">
  <form id="create-form">

    <div class="form-group">
      <input type="text" id="burgerName" burger_name="name">

    </div>

    <p>Enter a burger you want to eat and Click the "Submit" button.</p>
    <button id="create-btn" type="submit">Submit</button>

  </form>
